<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # Se il file o la cartella richiesta esiste, usalo direttamente
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d

    # Altrimenti, reindirizza tutte le richieste a index.php
    RewriteRule ^ index.php [QSA,L]
</IfModule>
